<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeFragment"
    android:background="@color/white"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/homeCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to your Photo Gallery"
        android:fontFamily="cursive"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/gallery1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/gallery1"/>

        <ImageView
            android:id="@+id/gallery2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/gallery1"
            android:src="@drawable/gallery2"/>

        <ImageView
            android:id="@+id/gallery3"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_below="@+id/gallery1"
            android:src="@drawable/gallery5"/>

        <ImageView
            android:id="@+id/gallery4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/gallery3"
            android:src="@drawable/galery3"/>

        <ImageView
            android:id="@+id/gallery5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@id/gallery4"
            android:layout_below="@id/gallery3"
            android:src="@drawable/gallery4"/>
    </RelativeLayout>

</FrameLayout>